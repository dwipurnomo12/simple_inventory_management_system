@model Inventory.Models.ItemOut
@{
    ViewData["Title"] = "Edit Item Out";
}

<div class="container-fluid">
    <div class="card-group">
        <div class="card border-right">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <h3>Edit Item Out</h3>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-primary float-right">Back</a>
                    </div>
                </div>
            </div>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="DateOfEntry">Date of Entry</label>
                                <input type="date" class="form-control" asp-for="DateOfEntry" />
                                @Html.ValidationMessageFor(model => model.DateOfEntry, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="ItemId">Item</label>
                                <select asp-for="ItemId" asp-items="ViewBag.Items" class="form-control">
                                    <option value=""> -- Select Item -- </option>
                                </select>
                                @Html.ValidationMessageFor(model => model.ItemId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="StockOut">Stock Out</label>
                                <input type="number" class="form-control" asp-for="StockOut" />
                                @Html.ValidationMessageFor(model => model.StockOut, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="CustomerId">Customer</label>
                                <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-control">
                                    <option value=""> -- Select Customer -- </option>
                                </select>
                                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Update </button>
                </div>
            </form>
        </div>
    </div>
</div>


